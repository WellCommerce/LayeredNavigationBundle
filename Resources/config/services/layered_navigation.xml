<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin/layered_navigation.xml"/>
        <import resource="front/layered_navigation.xml"/>
    </imports>

    <services>
        <service id="layered_navigation.manager" class="WellCommerce\Bundle\LayeredNavigationBundle\Manager\LayeredNavigationManager" parent="core.manager">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="product.factory"/>
        </service>
    </services>
</container>
